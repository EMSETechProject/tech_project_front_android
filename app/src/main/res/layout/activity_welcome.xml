<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.camarasa.robin.nutritivecoach.Activities.Activities.Welcome.WelcomeActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="288dp"
        android:layout_height="54dp"
        app:srcCompat="@mipmap/logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textViewWelcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Welcome John Doe"
        android:textColor="@color/colorSurvey"
        android:textSize="@dimen/survey_question"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:onClick="logout"
        app:layout_constraintLeft_toRightOf="@+id/imageButton5"
        app:layout_constraintTop_toTopOf="@+id/imageButton5"
        app:srcCompat="@mipmap/logout" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:srcCompat="@mipmap/settings"
        android:onClick="settings"
        app:layout_constraintLeft_toRightOf="@+id/imageButton15"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageButton15"
        android:layout_marginTop="0dp" />

    <ImageButton
        android:id="@+id/imageButton14"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="35dp"
        android:onClick="stats"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWelcomeMessage"
        app:srcCompat="@mipmap/evolution" />

    <ImageButton
        android:id="@+id/imageButton15"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:onClick="meal"
        app:layout_constraintLeft_toRightOf="@+id/imageButton14"
        app:layout_constraintTop_toTopOf="@+id/imageButton14"
        app:srcCompat="@mipmap/meal" />

</android.support.constraint.ConstraintLayout>
