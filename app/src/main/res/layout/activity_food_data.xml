<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.camarasa.robin.nutritivecoach.Activities.Activities.Meal.FoodData">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="288dp"
        android:layout_height="54dp"
        app:srcCompat="@mipmap/logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:onClick="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/home"
        android:layout_marginEnd="16dp" />

    <Spinner
        android:id="@+id/spinnerfood"
        android:layout_width="294dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="33dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinnercat"
        app:layout_constraintTop_toBottomOf="@+id/spinnercat" />

    <Spinner
        android:id="@+id/spinnercat"
        android:layout_width="294dp"
        android:layout_height="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textViewFoodData"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/colorSurvey"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        app:layout_constraintLeft_toLeftOf="@+id/spinnerfood"
        app:layout_constraintRight_toRightOf="@+id/spinnerfood"
        app:layout_constraintTop_toBottomOf="@+id/spinnerfood" />

</android.support.constraint.ConstraintLayout>
